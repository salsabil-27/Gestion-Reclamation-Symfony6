{% extends 'Front/baseFront.html.twig' %}

{% block title %}
    <h1>Register for {{ event.title }}</h1>
{% endblock %}

{% block body %}
    <div style="display: flex;align-items: center;justify-content: center;margin--5 :-15px ; padding:10px">
        <div class="row">
            <div class="lg-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Register Now :</h5>

                        {{ form_start(form1,{'attr': {'novalidate': 'novalidate'}} ) }} 

                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-7 col-form-label">Email</label>
                            <div class="col-sm-10">
                                {{ form_widget(form1.nameRegister,{'attr': {'class':'form-control', 'id': 'nameRegister'}}) }}
                                {{ form_errors(form1.nameRegister,{'attr': {'class':'text-danger'}}) }}
                            </div>
                        </div>

                        <div class="row mb-3">          
                            <label for="inputText" class="col-sm-7 col-form-label">ObjetR</label>
                            <div class="col-sm-10">
                                {{ form_widget(form1.EmailRegister,{'attr': {'class':'form-control', 'id': 'emailRegister'}}) }}
                                {{ form_errors(form1.EmailRegister,{'attr': {'class':'text-danger'}}) }}
                            </div>
                        </div>  

                        <div class="row mb-3">
                            <div class="col-sm-10">
                            
                            </div>
                        </div>

                        {{ form_end(form1) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
